{
  "version": 1,
  "jobs": [
    {
      "id": "email-check-daytime",
      "agentId": "main",
      "name": "Email check - Daytime (8AM-10PM)",
      "enabled": true,
      "schedule": {
        "kind": "cron",
        "expr": "*/15 8-21 * * *"
      },
      "sessionTarget": "isolated",
      "wakeMode": "now",
      "payload": {
        "kind": "agentTurn",
        "message": "Check Gmail for unread messages from ${USER_EMAIL} using the gog CLI tool (run: gog gmail search 'is:unread' --json). If any found, read them and follow any instructions contained in the emails. Then send a message back to this session summarizing what you found and what actions you took."
      },
      "delivery": {
        "mode": "none"
      }
    },
    {
      "id": "email-check-nighttime",
      "agentId": "main",
      "name": "Email check - Nighttime (10PM-8AM)",
      "enabled": true,
      "schedule": {
        "kind": "cron",
        "expr": "0 22-23,0-7 * * *"
      },
      "sessionTarget": "isolated",
      "wakeMode": "now",
      "payload": {
        "kind": "agentTurn",
        "message": "Check Gmail for unread messages from ${USER_EMAIL} using the gog CLI tool (run: gog gmail search 'is:unread' --json). If any found, read them and follow any instructions. Only notify if urgent or important."
      },
      "delivery": {
        "mode": "none"
      }
    },
    {
      "id": "morning-digest",
      "agentId": "main",
      "name": "Morning Digest - 8 AM",
      "enabled": true,
      "schedule": {
        "kind": "cron",
        "expr": "0 8 * * *"
      },
      "sessionTarget": "isolated",
      "wakeMode": "now",
      "payload": {
        "kind": "agentTurn",
        "message": "Send a morning email digest to ${USER_EMAIL} with: 1) Summary of any unread emails that need attention â€” use gog CLI (gog gmail search 'is:unread' --json), 2) Top US news headlines, 3) Sports news if available, 4) Calendar overview for today using gog CLI (gog calendar list --json). Format as a clean brief."
      },
      "delivery": {
        "mode": "announce"
      }
    }
  ]
}
